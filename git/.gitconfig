[user]
	email = tkindy@hubspot.com
	name = Tyler Kindy
[core]
	hooksPath = /Users/tkindy/.git_hooks
	excludesfile = /Users/tkindy/.gitignore_global
  # pager = diff-so-fancy | less --tabs=4 -RFX
  pager = delta
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true
  light = false
[diff]
  colorMoved = default
[merge]
  conflictstyle = diff3
[remote "origin"]
	prune = true
[hub]
	host = git.hubteam.com
[pull]
	rebase = true
[diff-so-fancy]
	markEmptyLines = false
	stripLeadingSymbols = false
[advice]
	detachedHead = false
	macheteEditorSelection = false
[color "diff-highlight"]
	newNormal = green
	newHighlight = green 22
[url "git@git.hubteam.com:HubSpot/"]
  insteadOf = "hs:"
[rebase]
	updateRefs = true
